<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:customAttr="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="5dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/iv_logo"
            android:src="@drawable/logo_kfc"
            android:scaleType="fitCenter"/>
        <anylife.scrolltextview.ScrollTextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:padding="2dp"
            android:id="@+id/tv_name"
            customAttr:isHorizontal="true"
            customAttr:speed="3"
            customAttr:textColor="#ffffffff"
            customAttr:textSize="12sp" />
        <anylife.scrolltextview.ScrollTextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_distance"
            customAttr:isHorizontal="false"
            customAttr:speed="3"
            customAttr:textColor="#ffffffff"
            customAttr:textSize="12sp" />
    </FrameLayout>

</FrameLayout>